@{
    ViewData["Title"] = "網站首頁";
}

<div class="wow bounceInUp" style="margin-top:40px" data-wow-delay="0.5s">
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="4" aria-label="Slide 5"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="3000">
                <img src="~/images/P1.jpg" class="d-block w-100">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="~/images/P2.jpg" class="d-block w-100">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="~/images/P3.jpg" class="d-block w-100">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="~/images/P4.jpg" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="~/images/P5.jpg" class="d-block w-100">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

</div>

